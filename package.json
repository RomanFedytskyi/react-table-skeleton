{
  "name": "react-table-skeleton",
  "version": "0.3.0",
  "description": "Lightweight React <tbody> skeleton rows for loading tables with stable layout and optional shimmer.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run typecheck && npm run test && npm run build"
  },
  "peerDependencies": {
    "react": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RomanFedytskyi/react-table-skeleton.git"
  },
  "bugs": {
    "url": "https://github.com/RomanFedytskyi/react-table-skeleton/issues"
  },
  "homepage": "https://github.com/RomanFedytskyi/react-table-skeleton#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/testing-library__jest-dom": "^6.0.0",
    "happy-dom": "^20.1.0",
    "jsdom": "^27.4.0",
    "tsup": "^6.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.16"
  },
  "license": "MIT"
}
